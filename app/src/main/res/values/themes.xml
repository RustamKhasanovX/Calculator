<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white </item>
        <item name="colorPrimaryVariant">@color/white </item>
        <item name="colorOnPrimary">@color/white </item>
        <item name="colorSecondary">@color/white </item>
        <item name="colorSecondaryVariant">@color/white </item>
        <item name="colorOnSecondary">@color/black </item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant </item>
    </style>

    <style name="Digits">
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@drawable/shape_digits</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Optionals">
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@drawable/shape_options</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Signs">
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@drawable/shape_signs</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="C">
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@drawable/shape_c</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Equal">
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@drawable/shape_equal</item>
        <item name="android:clickable">true</item>
    </style>
</resources>